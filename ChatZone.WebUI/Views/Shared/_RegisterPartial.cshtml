@model ChatZone.WebUI.ViewModels.Users.RegisterViewModel

<form id="register" class="register-form" asp-controller="Auth" asp-action="Register">
	<div asp-validation-summary="All" class="text-danger" style="  direction: rtl;"></div>
	<input asp-for="UserName" type="text" placeholder="name"/>
	<input asp-for="Password" type="password" placeholder="password"/>
	<input asp-for="RePassword" type="password" placeholder="repassword"/>
	<button type="submit">create</button>
	<p class="message">Already registered? <a href="#login">Sign In</a></p>
</form>